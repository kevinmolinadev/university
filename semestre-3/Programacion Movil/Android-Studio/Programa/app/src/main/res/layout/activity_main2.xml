<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:padding="5dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Componentes"
            android:textSize="30dp"
            />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="CheckBox"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/btnCheck"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Esta marcado?" />

        <LinearLayout
            android:id="@+id/imgC"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:background="@color/purple_700"
            android:orientation="vertical">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/imgMover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/usuario" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
            android:id="@+id/btnMoverT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arriba" />
            <Button
            android:id="@+id/btnMoverR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Derecha" />
            <Button
            android:id="@+id/btnMoverB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abajo" />
            <Button
            android:id="@+id/btnMoverL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Izquierda" />
        </LinearLayout>


        <EditText
            android:id="@+id/textCapicua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/btmCapicua"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Capicua" />

        <Button
            android:id="@+id/btnlista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="50dp"
            android:text="lista" />
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>